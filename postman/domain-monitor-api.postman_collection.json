            "body": {
              "mode": "raw",
              "raw": "{\n  \"domain\": \"example.com\",\n  \"checkFrequency\": \"daily\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/domains",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "domains"]
            }
          }
        },
        {
          "name": "Bulk Add Domains",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"domains\": [\n    {\n      \"domain\": \"example1.com\",\n      \"checkFrequency\": \"daily\"\n    },\n    {\n      \"domain\": \"example2.com\",\n      \"checkFrequency\": \"weekly\"\n    },\n    {\n      \"domain\": \"example3.com\",\n      \"checkFrequency\": \"monthly\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/domains/bulk",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "domains", "bulk"]
            }
          }
        },
        {
          "name": "List Domains",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/domains?page=1&limit=20",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "domains"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "status",
                  "value": "active",
                  "disabled": true
                },
                {
                  "key": "recommendation",
                  "value": "pass",
                  "disabled": true
                },
                {
                  "key": "search",
                  "value": "example",
                  "disabled": true
                },
                {
                  "key": "sortBy",
                  "value": "created_at",
                  "disabled": true
                },
                {
                  "key": "sortOrder",
                  "value": "desc",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Get Domain by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/domains/:id",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "domains", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "domain-uuid-here"
                }
              ]
            }
          }
        },
        {
